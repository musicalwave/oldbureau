<html t:type="layout" t:pageTitle="Клиенты : Баланс"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        >

    <table>
        <tr><th>Клиент</th><th>Баланс</th></tr>
        <t:loop source="clients" value="client">
            <tr>
                <td>${client.name}</td>
                <td>${client.phoneNumber}</td>
                <td>${client.balance}</td>
            </tr>
        </t:loop>
    </table>

</html>
